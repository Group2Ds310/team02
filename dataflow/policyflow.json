{
	"name": "policyflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "policyparquet",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "policyparquets",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          CountryName as string,",
				"          CountryCode as string,",
				"          RegionName as string,",
				"          RegionCode as string,",
				"          Jurisdiction as string,",
				"          Date as timestamp,",
				"          C1_School_closing as long,",
				"          C1_Flag as decimal(38,18),",
				"          C2_Workplace_closing as long,",
				"          C2_Flag as decimal(38,18),",
				"          C3_Cancel_public_events as long,",
				"          C3_Flag as decimal(38,18),",
				"          C4_Restrictions_on_gatherings as long,",
				"          C4_Flag as decimal(38,18),",
				"          C5_Close_public_transport as long,",
				"          C5_Flag as decimal(38,18),",
				"          C6_Stay_at_home_requirements as long,",
				"          C6_Flag as decimal(38,18),",
				"          C7_Restrictions_on_internal_movement as long,",
				"          C7_Flag as decimal(38,18),",
				"          C8_International_travel_controls as long,",
				"          E1_Income_support as long,",
				"          E1_Flag as decimal(38,18),",
				"          E2_Debt_contract_relief as long,",
				"          E3_Fiscal_measures as long,",
				"          E4_International_support as long,",
				"          H1_Public_information_campaigns as long,",
				"          H1_Flag as decimal(38,18),",
				"          H2_Testing_policy as long,",
				"          H3_Contact_tracing as long,",
				"          H4_Emergency_investment_in_healthcare as long,",
				"          H5_Investment_in_vaccines as long,",
				"          H6_Facial_Coverings as long,",
				"          H6_Flag as decimal(38,18),",
				"          H7_Vaccination_policy as long,",
				"          H7_Flag as decimal(38,18),",
				"          H8_Protection_of_elderly_people as long,",
				"          H8_Flag as decimal(38,18),",
				"          M1_Wildcard as decimal(38,18),",
				"          StringencyIndex as decimal(38,18),",
				"          StringencyIndexForDisplay as decimal(38,18),",
				"          StringencyLegacyIndex as decimal(38,18),",
				"          StringencyLegacyIndexForDisplay as decimal(38,18),",
				"          GovernmentResponseIndex as decimal(38,18),",
				"          GovernmentResponseIndexForDisplay as decimal(38,18),",
				"          ContainmentHealthIndex as decimal(38,18),",
				"          ContainmentHealthIndexForDisplay as decimal(38,18),",
				"          EconomicSupportIndex as decimal(38,18),",
				"          EconomicSupportIndexForDisplay as decimal(38,18),",
				"          id as string,",
				"          {_rid} as string,",
				"          {_self} as string,",
				"          {_etag} as string,",
				"          {_attachments} as string,",
				"          {_ts} as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     partitionBy('hash', 1)) ~> source1",
				"source1 select(mapColumn(",
				"          each(match(/* All input columns */true()),",
				"               /* Input name */$$ = $$)",
				"     ),",
				"     partitionBy('hash', 1),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          ID as integer,",
				"          Updated as date,",
				"          Confirmed as integer,",
				"          Confirmed_Change as integer,",
				"          Latitude as decimal(10,5),",
				"          Longitude as decimal(10,5),",
				"          ISO2 as string,",
				"          ISO3 as string,",
				"          Country_Region as string,",
				"          load_time as timestamp",
				"     ),",
				"     format: 'parquet',",
				"     partitionFileNames:['policy.parquet'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          each(match(/* All input columns */true()),",
				"               /* Input name */$$ = $$)",
				"     ),",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}